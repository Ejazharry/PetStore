<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetailsActivity">


    <ImageView
        android:id="@+id/petImageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/petBreedNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petImageDetails"
        android:text="Breed Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/petPriceDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petBreedNameDetails"
        android:textStyle="bold"
        android:text="Price"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/petDescriptionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petPriceDetail"
        android:text="Breed Description"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>





    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/numberButton"
        android:layout_width="70dp"
        android:layout_height="30dp"
        app:textSize="7sp"
        android:elevation="6dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/petDescriptionDetails"
        app:initialNumber="1"
        app:finalNumber="10"


        >


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>



<Button
    android:id="@+id/petaddtoCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_margin="20dp"
    android:layout_alignParentBottom="true"
    android:text="Add To Cart"
    android:textColor="@android:color/white"
    android:textSize="18dp"/>

</RelativeLayout>