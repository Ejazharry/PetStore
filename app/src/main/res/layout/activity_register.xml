<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signuppageimage"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/signup_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"/>
    <EditText
        android:id="@+id/signup_name_input"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/signup_applogo"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:background="@drawable/whitebutton"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/signup_phone_number_input"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/signup_name_input"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Phone Number"
        android:background="@drawable/whitebutton"
        android:inputType="number"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/signup_Password_input"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/signup_phone_number_input"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:background="@drawable/whitebutton"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/signup_Password_input"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/whitebutton"
        android:backgroundTint="@android:color/holo_blue_light"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="SignUp"
        android:textAllCaps="false"

        android:textSize="18.0dp" />



</RelativeLayout>