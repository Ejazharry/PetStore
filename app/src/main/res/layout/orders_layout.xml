<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:text="User Name :"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:text="Phone Number :"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/order_user_name"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phone_number"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:text="Price :"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:text="Address : "
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/order_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address"
            android:text="City :"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_city"
            android:text="Date :"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:text="Time :"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />






        <Button
            android:id="@+id/showProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_below="@+id/order_time"
            android:layout_margin="20dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="Products"
            android:textSize="18dp"/>



    </RelativeLayout>

</RelativeLayout>