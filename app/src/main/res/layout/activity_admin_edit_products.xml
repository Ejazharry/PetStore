<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminEditProductsActivity"

    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >



        <ImageView
            android:id="@+id/Edit_pet_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"


            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/Edit_breed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_pet_image"
            android:hint="Breed"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/Edit_pet_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/Edit_breed_name"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/Edit_pet_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/Edit_pet_price"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="25dp"

            />

        <Button
            android:id="@+id/Edit_Pet_Save_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:background="@drawable/input_design"
            android:backgroundTint="@android:color/holo_purple"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/Edit_pet_Description"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="25dp"

            />

        <Button
            android:id="@+id/Edit_Pet_Delete_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Delete"
            android:background="@drawable/input_design"
            android:backgroundTint="@android:color/holo_purple"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/Edit_Pet_Save_Button"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="25dp"

            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>